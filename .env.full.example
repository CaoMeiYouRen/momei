# ==========================================
# 墨梅博客 (Momei) 环境变量完整示例文件
# ==========================================

# ------------------------------------------
# 1. 基础核心配置 (Essential)
# ------------------------------------------

# 应用名称
NUXT_PUBLIC_APP_NAME=墨梅博客

# 站点 URL (用于生成 sitemap.xml)
NUXT_PUBLIC_SITE_URL=http://localhost:3000

# Better Auth 的基础 URL (通常与 SITE_URL 相同)
NUXT_PUBLIC_AUTH_BASE_URL=http://localhost:3000

# 用于加密、签名和哈希的密钥。生产环境必须设置！
# 可以使用 `openssl rand -hex 32` 生成。开发环境下会自动生成随机值。
AUTH_SECRET=

# 雪花算法机器 ID (0-1023)，用于生成分布式唯一 ID。默认自动获取进程 PID
# MACHINE_ID=

# ------------------------------------------
# 2. 数据库配置 (Database)
# ------------------------------------------

# 数据库连接 URL (SQLite, MySQL, PostgreSQL)
# 支持智能推断：
# - SQLite (推荐): sqlite://database/momei.sqlite (或 file://database/momei.sqlite)
# - MySQL: mysql://user:pass@host:3306/db
# - PostgreSQL: postgres://user:pass@host:5432/db
# 如果未配置，默认将使用本地 SQLite (database/momei.sqlite)
DATABASE_URL=sqlite://database/momei.sqlite

# 手动指定数据库类型 (sqlite, mysql, postgres)
# DATABASE_TYPE=sqlite

# SQLite 数据库路径 (兼容旧版，不推荐使用)
# DATABASE_PATH=database/momei.sqlite

# 数据库高级配置 (可选)
# DATABASE_SSL=false
# DATABASE_CHARSET=utf8_general_ci
# DATABASE_TIMEZONE=local
# DATABASE_ENTITY_PREFIX=momei_
# DATABASE_SYNCHRONIZE=false

# Redis 连接地址 (可选，用于缓存或限流)
# REDIS_URL=

# ------------------------------------------
# 3. 社交登录配置 (Social Auth)
# ------------------------------------------

# GitHub 配置
NUXT_PUBLIC_GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google 配置
NUXT_PUBLIC_GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# 是否启用匿名登录 (无需邮箱密码即可登录)
ANONYMOUS_LOGIN_ENABLED=false

# ------------------------------------------
# 4. AI 辅助功能 (AI Integration)
# ------------------------------------------

# AI 提供商 (openai, anthropic)
AI_PROVIDER=openai
# API 密钥。配置后将自动激活 AI 功能。
AI_API_KEY=
# 默认模型名称 (如 gpt-4o, claude-3-5-sonnet, deepseek-chat)
AI_MODEL=gpt-4o
# API 代理端点 (可选，用于 OpenAI 兼容服务)
AI_API_ENDPOINT=

# AI 图像生成配置 (AI Image)
# 是否启用 AI 图像生成
AI_IMAGE_ENABLED=false
# AI 图像提供商 (openai, stable-diffusion, doubao, gemini)
AI_IMAGE_PROVIDER=openai
# AI 图像 API 密钥 (可选，默认复用 AI_API_KEY)
AI_IMAGE_API_KEY=
# AI 图像模型名称 (如 dall-e-3, sd-v1-5)
AI_IMAGE_MODEL=dall-e-3
# AI 图像 API 代理端点 (可选，默认复用 AI_API_ENDPOINT)
AI_IMAGE_ENDPOINT=

# AI 生成参数控制 (可选)
# AI_MAX_TOKENS=2048
# AI_TEMPERATURE=0.7
# AI_MAX_CONTENT_LENGTH=50000
# AI_CHUNK_SIZE=4000

# ------------------------------------------
# 5. 站点管理与统计 (Analytics & Management)
# ------------------------------------------

# 管理员用户 ID 列表，使用逗号分隔 (注册后在此处指定 ID 提权)
ADMIN_USER_IDS=

# 联系邮箱
NUXT_PUBLIC_CONTACT_EMAIL=admin@example.com

# 站点运营方名称 (显示在页脚)
# NUXT_PUBLIC_SITE_OPERATOR=

# 默认文章版权声明
# NUXT_PUBLIC_DEFAULT_COPYRIGHT=all-rights-reserved

# Microsoft Clarity 配置 (可选)
NUXT_PUBLIC_CLARITY_PROJECT_ID=

# 百度统计 ID (可选)
NUXT_PUBLIC_BAIDU_ANALYTICS_ID=

# Google Analytics ID (可选)
NUXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# 站点验证 (可选)
# NUXT_PUBLIC_GOOGLE_SITE_VERIFICATION=
# NUXT_PUBLIC_BING_SITE_VERIFICATION=

# Sentry 监控 (可选)
NUXT_PUBLIC_SENTRY_DSN=
NUXT_PUBLIC_SENTRY_ENVIRONMENT=production

# ------------------------------------------
# 6. 邮件服务配置 (Email Service)
# ------------------------------------------

# SMTP 服务器配置
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
# 默认邮件发送者 (格式: "Name" <email@example.com>)
EMAIL_FROM=

# 邮件限流与时长过长控制 (可选)
# EMAIL_DAILY_LIMIT=100
# EMAIL_SINGLE_USER_DAILY_LIMIT=5
# EMAIL_LIMIT_WINDOW=86400
# EMAIL_EXPIRES_IN=300

# 匿名/临时邮箱域名配置
# ANONYMOUS_EMAIL_DOMAIN_NAME=anonymous.com
# TEMP_EMAIL_DOMAIN_NAME=example.com

# 是否强制要求验证邮箱后才能登录
EMAIL_REQUIRE_VERIFICATION=false

# ------------------------------------------
# 7. 文件存储与上传 (Storage & Upload)
# ------------------------------------------

# 存储类型 (s3, local)
STORAGE_TYPE=local

# 本地存储路径 (仅 local 模式使用)
# LOCAL_STORAGE_DIR=public/uploads
# NUXT_PUBLIC_LOCAL_STORAGE_BASE_URL=/uploads

# S3 兼容存储配置 (仅 s3 模式使用，如 Cloudflare R2)
# S3_ENDPOINT=
# S3_REGION=auto
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=
# S3_BUCKET_NAME=
# S3_BASE_URL=
# BUCKET_PREFIX=

# Vercel Blob 存储配置 (仅 vercel-blob 模式使用)
# VERCEL_BLOB_TOKEN=
# BLOB_READ_WRITE_TOKEN=

# 最大允许上传的常规文件大小，默认 4.5 MiB
NUXT_PUBLIC_MAX_UPLOAD_SIZE=4.5MiB

# 最大允许上传的音频大小，默认 100 MiB
NUXT_PUBLIC_MAX_AUDIO_UPLOAD_SIZE=100MiB

# 上传文件限制 (可选)
# UPLOAD_LIMIT_WINDOW=86400
# UPLOAD_DAILY_LIMIT=100
# UPLOAD_SINGLE_USER_DAILY_LIMIT=5
# LOCAL_STORAGE_MIN_FREE_SPACE=104857600

# ------------------------------------------
# 8. 合规、安全与验证码 (Compliance & Safety)
# ------------------------------------------

# 备案信息 (仅中国大陆)
NUXT_PUBLIC_SHOW_COMPLIANCE_INFO=false
NUXT_PUBLIC_ICP_LICENSE_NUMBER=
NUXT_PUBLIC_PUBLIC_SECURITY_NUMBER=

# 验证码 (Captcha) 提供者：cloudflare-turnstile, google-recaptcha, hcaptcha, captchafox
NUXT_PUBLIC_AUTH_CAPTCHA_PROVIDER=
NUXT_PUBLIC_AUTH_CAPTCHA_SITE_KEY=
AUTH_CAPTCHA_SECRET_KEY=

# 外部资源（图片等）域名白名单
# NUXT_PUBLIC_SECURITY_URL_WHITELIST=images.unsplash.com,cdn.pixabay.com

# ------------------------------------------
# 9. 日志、调试与 Demo 模式 (Logging & Debug)
# ------------------------------------------

# 日志等级 (silly, debug, http, info, warn, error)
LOG_LEVEL=http
# 是否写入日志到文件 (Serverless 环境建议设为 false)
LOGFILES=false
# LOG_DIR=logs

# Axiom 日志集成 (可选)
# AXIOM_DATASET_NAME=
# AXIOM_API_TOKEN=

# Demo 模式开关 (开启后将限制某些敏感操作)
NUXT_PUBLIC_DEMO_MODE=false
# Demo 账号配置
# NUXT_PUBLIC_DEMO_USER_EMAIL=admin@example.com
# NUXT_PUBLIC_DEMO_PASSWORD=momei123456

# 已初始化标志，设置后将不再显示初始化引导页面
MOMEI_INSTALLED=true
