{
  "name": "momei-cli",
  "version": "0.1.0",
  "description": "Momei CLI - Migration tool for importing posts from Hexo to Momei",
  "type": "module",
  "bin": {
    "momei": "dist/index.mjs"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "start": "node dist/index.mjs",
    "lint": "eslint src --fix --no-warn-ignored",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "momei",
    "hexo",
    "migration",
    "blog",
    "cli"
  ],
  "author": "CaoMeiYouRen",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.5",
    "cac": "^6.7.14",
    "chalk": "^5.4.1",
    "glob": "^13.0.6",
    "gray-matter": "^4.0.3",
    "ora": "^9.3.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "eslint": "^9.39.2",
    "eslint-config-cmyr": "2.1.4",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20"
  }
}