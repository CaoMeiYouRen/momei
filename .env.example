# 基础配置
# 雪花算法机器 ID。默认为进程 ID 对 1024 取余数，也可以手动指定
MACHINE_ID=

# Better Auth 的基础 URL
NUXT_PUBLIC_AUTH_BASE_URL=http://localhost:3000

# 网站运营方名称
NUXT_PUBLIC_SITE_OPERATOR=

# 联系邮箱
NUXT_PUBLIC_CONTACT_EMAIL=

# 用于加密、签名和哈希的密钥。生产环境必须设置
# 可以使用 `openssl rand -hex 32` 生成
AUTH_SECRET=
# BETTER_AUTH_SECRET=

# 应用名称
NUXT_PUBLIC_APP_NAME=墨梅博客

# 是否写入日志到文件
LOGFILES=false

# 日志等级 (silly, debug, verbose, http, info, warn, error)
LOG_LEVEL=http

# 日志文件目录
LOG_DIR=logs

# Axiom 日志配置 (可选)
AXIOM_DATASET_NAME=
AXIOM_API_TOKEN=

# Microsoft Clarity 配置 (可选)
NUXT_PUBLIC_CLARITY_PROJECT_ID=

# 站点 URL (用于生成 sitemap.xml)
NUXT_PUBLIC_SITE_URL=https://momei.app

# Google Search Console 验证 (可选)
NUXT_PUBLIC_GOOGLE_SITE_VERIFICATION=

# Bing Search Console 验证 (可选)
NUXT_PUBLIC_BING_SITE_VERIFICATION=

# 百度统计配置 (可选)
NUXT_PUBLIC_BAIDU_ANALYTICS_ID=

# Google Analytics 配置 (可选)
NUXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# Sentry 配置 (可选)
NUXT_PUBLIC_SENTRY_DSN=
NUXT_PUBLIC_SENTRY_ENVIRONMENT=development

# 管理员配置
# 管理员用户ID列表，使用逗号分隔
ADMIN_USER_IDS=

# Demo 模式配置
# 是否启用Demo模式
NUXT_PUBLIC_DEMO_MODE=false
# Demo账号邮箱
NUXT_PUBLIC_DEMO_USER_EMAIL=admin@example.com
# Demo账号密码
NUXT_PUBLIC_DEMO_PASSWORD=momei123456

# 数据库配置
# 数据库类型：sqlite, mysql, postgres
DATABASE_TYPE=sqlite

# 数据库连接 URL (MySQL和PostgreSQL使用)
# DATABASE_URL=mysql://user:password@localhost:3306/momei

# SQLite 数据库路径 (仅SQLite使用)
DATABASE_PATH=database/momei.sqlite

# 是否启用 SSL 连接 (true/false)
DATABASE_SSL=false

# 数据库字符集 (仅MySQL使用)
DATABASE_CHARSET=utf8_general_ci

# 数据库时区 (仅MySQL使用)
DATABASE_TIMEZONE=local

# 数据库表前缀
DATABASE_ENTITY_PREFIX=momei_

# 是否同步数据库表结构 (自动创建表结构)。生产环境不建议开启
DATABASE_SYNCHRONIZE=false

# Redis配置（可选）
# Redis 连接地址
REDIS_URL=

# 邮件服务配置
# SMTP 服务器地址
EMAIL_HOST=
# SMTP 服务器端口
EMAIL_PORT=587
# 是否使用SSL连接邮件服务器
EMAIL_SECURE=false
# 邮件发送者地址
EMAIL_USER=
# 邮件发送者密码
EMAIL_PASS=
# 默认邮件发送者名称和地址
EMAIL_FROM=

# 邮箱验证码每日发送上限（全局限制）
EMAIL_DAILY_LIMIT=100
# 单个邮箱每日验证码发送上限
EMAIL_SINGLE_USER_DAILY_LIMIT=5
# 限流时间窗口 (秒)
EMAIL_LIMIT_WINDOW=86400
# 邮件验证码有效时间（秒）
EMAIL_EXPIRES_IN=300
# 是否要求邮箱验证。若启用，则用户必须在登录前验证他们的邮箱
EMAIL_REQUIRE_VERIFICATION=false

# 短信验证码有效时间（秒）
PHONE_EXPIRES_IN=300
# 匿名和临时邮箱配置
ANONYMOUS_EMAIL_DOMAIN_NAME=anonymous.com
TEMP_EMAIL_DOMAIN_NAME=example.com


# 最大允许上传的文件大小，默认 4.5 MiB
NUXT_PUBLIC_MAX_UPLOAD_SIZE="4.5MiB"
# 上传文件限流时间窗口
# UPLOAD_LIMIT_WINDOW=86400
# 文件上传每日限制
UPLOAD_DAILY_LIMIT=100
# 单个用户每日上传文件限制
UPLOAD_SINGLE_USER_DAILY_LIMIT=5

# 图床配置

# 文件名前缀
# BUCKET_PREFIX=

# 存储类型，可选值：s3, vercel-blob
# 如果想要存储到 R2，请使用 R2 的 S3 兼容接口，参考 https://developers.cloudflare.com/r2/api/s3/api，此时设置为 's3'
# STORAGE_TYPE=s3

# S3 基础 URL
# S3_BASE_URL=

# S3 区域
# S3_REGION=

# S3 存储桶名称
# S3_BUCKET_NAME=

# S3 访问密钥 ID
# S3_ACCESS_KEY_ID=

# S3 秘密访问密钥
# S3_SECRET_ACCESS_KEY=

# S3 端点
# S3_ENDPOINT=

# Vercel Blob 令牌，参考 https://vercel.com/docs/storage/vercel-blob
# VERCEL_BLOB_TOKEN=

# Vercel Blob 读写令牌。跟 VERCEL_BLOB_TOKEN 只要有一个即可。
# BLOB_READ_WRITE_TOKEN=

# 社交登录配置
# 匿名登录配置
ANONYMOUS_LOGIN_ENABLED=false

# GitHub 配置
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google 配置
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# 验证码配置 (Captcha)
# 验证码提供者，可选值：cloudflare-turnstile, google-recaptcha, hcaptcha, captchafox
# 如果未配置 AUTH_CAPTCHA_SECRET_KEY，则验证码功能将保持禁用
# NUXT_PUBLIC_AUTH_CAPTCHA_PROVIDER=cloudflare-turnstile
NUXT_PUBLIC_AUTH_CAPTCHA_PROVIDER=
# 验证码站点密钥 (公开，前端展示使用)
NUXT_PUBLIC_AUTH_CAPTCHA_SITE_KEY=
# 验证码私钥 (私密，后端校验使用)
AUTH_CAPTCHA_SECRET_KEY=

# AI 配置
# 是否启用 AI 功能
AI_ENABLED=false
# AI 服务提供商 (openai, anthropic)
AI_PROVIDER=openai
# API 密钥
AI_API_KEY=
# 默认模型名称 (如 gpt-4o, claude-3-5-sonnet, deepseek-chat)
AI_MODEL=gpt-4o
# API 端点 (可选，用于 OpenAI 兼容服务, 默认为 https://api.openai.com/v1)
AI_API_ENDPOINT=
# 最大生成 Token 数
AI_MAX_TOKENS=2048
# 温度 (0-2)
AI_TEMPERATURE=0.7
# 单次长内容处理的最大字符长度 (默认 50000)
AI_MAX_CONTENT_LENGTH=50000
# 分段处理的目标块大小 (默认 4000)
AI_CHUNK_SIZE=4000


# 版权声明。默认：所有权利保留，禁止转载
NUXT_PUBLIC_DEFAULT_COPYRIGHT="all-rights-reserved"

# 备案信息配置（可选，仅在中国大陆地区需要）
# ICP 备案号，格式如：京ICP备12345678号
NUXT_PUBLIC_ICP_LICENSE_NUMBER=

# 公安网安备案号，格式如：京公网安备 11010802012345号
NUXT_PUBLIC_PUBLIC_SECURITY_NUMBER=

# 是否显示备案信息，默认 false。设为 true 才会显示备案信息
NUXT_PUBLIC_SHOW_COMPLIANCE_INFO=false

# 安全配置
# 外部资源 URL 域名白名单，使用逗号分隔。
# 允许在此处添加受信任的图床、CDN 域名，以加固系统安全性，防止非授权资源的注入。
NUXT_PUBLIC_SECURITY_URL_WHITELIST="images.unsplash.com,cdn.pixabay.com,img.shields.io,i.imgur.com,github.com,avatars.githubusercontent.com,lh3.googleusercontent.com"
